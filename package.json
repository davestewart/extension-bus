{
  "name": "extension-bus",
  "version": "1.1.0",
  "description": "Universal message bus for Chromium and Firefox web extensions",
  "files":["dist"],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "postbuild": "npm run demo:prepare && npm run demo:copy",
    "demo:prepare": "rimraf demo/bus && mkdir demo/bus",
    "demo:copy": "cp ./dist/bus.es.* ./demo/bus",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likelylogic/extension-bus.git"
  },
  "author": "Dave Stewart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/likelylogic/extension-bus/issues"
  },
  "homepage": "https://github.com/likelylogic/extension-bus#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.256",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
